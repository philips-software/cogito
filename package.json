{
    "private": true,
    "devDependencies": {
        "@babel/core": "7.0.0-beta.44",
        "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.44",
        "@babel/preset-react": "7.0.0-beta.44",
        "babel-core": "^7.0.0-0",
        "babel-eslint": "8.2.2",
        "babel-jest": "22.4.3",
        "jest": "22.4.3",
        "lerna": "^2.11.0",
        "libsodium-wrappers": "^0.7.2",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "regenerator-runtime": "^0.11.1",
        "semantic-ui-css": "2.2.14",
        "semantic-ui-react": "^0.79.1",
        "standard": "^11.0.1",
        "truffle-contract": "^3.0.5",
        "web3": "^1.0.0-beta.34"
    },
    "workspaces": {
        "packages": [
            "workspaces/*"
        ]
    },
    "jest": {
        "projects": [
            "workspaces/cogito-web3",
            "workspaces/cogito-encryption",
            "workspaces/cogito-identity",
            "workspaces/cogito-attestations",
            "workspaces/telepath-js",
            "workspaces/telepath-queuing-service",
            "workspaces/demo-app",
            "workspaces/crypto",
            "workspaces/faucet",
            "workspaces/cogito-ios-app-distribution"
        ],
        "testMatch": [
            "**/*.test.js"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "source/**.js",
            "!**/*.test.js",
            "!**/node_modules/**"
        ],
        "coverageReporters": [
            "text-summary"
        ]
    },
    "scripts": {
        "test": "yarn lint && NODE_PATH=./workspaces/demo-app/src yarn jest",
        "test:watch": "NODE_PATH=./workspaces/demo-app/src yarn jest --watch",
        "lint": "yarn standard && cd ./workspaces/demo-app/truffle && yarn lint",
        "lint-fix": "yarn standard --fix --verbose",
        "build": "yarn lerna run --scope @cogitojs/** build"
    },
    "standard": {
        "parser": "babel-eslint",
        "ignore": [
            "**/node_modules/**",
            "**/umd/**",
            "**/es/**",
            "**/lib/**",
            "**/build/**"
        ],
        "envs": [
            "es6",
            "browser",
            "jest"
        ],
        "globals": [
            "artifacts",
            "contract",
            "assert",
            "context"
        ]
    }
}
